<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Panel de gestion des commandes PiiDev.">
        <meta name="author" content="Coderthemes">

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">

        <title>PiiDev - Panel</title>

        <!--Morris Chart CSS -->
		    <link rel="stylesheet" href="{{ asset('Panel/assets/plugins/morris/morris.css') }}">

        <!-- Sweet Alert -->
        <link href="{{ asset('Panel/assets/plugins/bootstrap-sweetalert/sweet-alert.css') }}" rel="stylesheet" type="text/css">

        <link href="{{ asset('Panel/assets/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('Panel/assets/css/core.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('Panel/assets/css/components.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('Panel/assets/css/icons.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('Panel/assets/css/pages.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('Panel/assets/css/menu.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('Panel/assets/css/responsive.css') }}" rel="stylesheet" type="text/css" />

        <!-- HTML5 Shiv and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->

        <script src="{{ asset('Panel/assets/js/modernizr.min.js') }}"></script>

    </head>


    <body>


        <!-- Navigation Bar-->
        <header id="topnav">
            <div class="topbar-main">
                <div class="container">


                    <div class="menu-extras">

                        <ul class="nav navbar-nav navbar-right pull-right">
                            <li class="dropdown navbar-c-items">
                                <a href="#" data-target="#" class="dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="true">
                                    <i class="icon-bell"></i> <span class="badge badge-xs badge-danger">3</span>
                                </a>
                            </li>
                        </ul>
                        <div class="menu-item">
                            <!-- Mobile menu toggle-->
                            <a class="navbar-toggle">
                                <div class="lines">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </div>
                            </a>
                            <!-- End mobile menu toggle-->
                        </div>
                    </div>

                </div>
            </div>

            <div class="navbar-custom">
                <div class="container">
                    <div id="navigation">
                        <!-- Navigation Menu-->
                        <ul class="navigation-menu">
                            <li class="has-submenu">
                                <a href="{{ path('portfolio_panel') }}"><i class="md md-dashboard"></i>Accueil</a>
                            </li>
                            <li class="has-submenu">
                                <a href="{{ path('portfolio_panel_commandes') }}"><i class="md md-shopping-cart"></i>Commandes</a>
                            </li>
                        </ul>
                        <!-- End navigation menu        -->
                    </div>
                </div> <!-- end container -->
            </div> <!-- end navbar-custom -->
        </header>
        <!-- End Navigation Bar-->


        <div class="wrapper">
            <div class="container">

                <!-- Page-Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <h4 class="page-title">{% block titre %}Accueil{% endblock %}</h4>
                        <p class="text-muted page-title-alt">{% block sous_titre %}Bienvenue sur le panel de gestion des commandes PiiDev !{% endblock %}</p>
                    </div>
                </div>

                {% block body %}
                <div class="row">
                    <div class="col-md-6 col-lg-3">
                        <div class="widget-bg-color-icon card-box fadeInDown animated">
                            <div class="bg-icon bg-icon-danger pull-left">
                                <i class="md md-shopping-cart text-danger"></i>
                            </div>
                            <div class="text-right">
                                <h3 class="text-dark"><b class="counter">{{ attentes }}</b></h3>
                                <p class="text-muted">Commandes en attentes</p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3">
                        <div class="widget-bg-color-icon card-box">
                            <div class="bg-icon bg-icon-warning pull-left">
                                <i class="fa fa-gear text-warning"></i>
                            </div>
                            <div class="text-right">
                                <h3 class="text-dark"><b class="counter">{{ cours }}</b></h3>
                                <p class="text-muted">Commandes en cours de traitement</p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3">
                        <div class="widget-bg-color-icon card-box">
                            <div class="bg-icon bg-icon-success pull-left">
                                <i class="ion-checkmark-round text-success"></i>
                            </div>
                            <div class="text-right">
                                <h3 class="text-dark"><b class="counter">{{ terminee }}</b></h3>
                                <p class="text-muted">Commandes terminées</p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3">
                        <div class="widget-bg-color-icon card-box">
                            <div class="bg-icon bg-icon-purple pull-left">
                                <i class="fa fa-users text-purple"></i>
                            </div>
                            <div class="text-right">
                                <h3 class="text-dark"><b class="counter">5</b></h3>
                                <p class="text-muted">Membres de l'équipe de développement</p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

                <div class="row" style="margin-bottom: 19px">

                    <div class="col-lg-4">
                        <div class="card-box">
                            <h4 class="text-dark header-title m-t-0 m-b-30">Objectif du mois</h4>

                            <div class="widget-chart text-center">
                                <input class="knob" data-width="150" data-height="150" data-linecap=round data-fgColor="#fb6d9d" value="{{ perc }}" data-skin="tron" data-angleOffset="180" data-readOnly=true data-thickness=".15"/>
                                <h5 class="text-muted m-t-20">Nombre de commande terminée</h5>
                                <h2 class="font-600">{{ terminee }} <i class="md md-shopping-cart"></i></h2>
                                <ul class="list-inline m-t-15">
                                    <li>
                                        <h5 class="text-muted m-t-20">Objectif</h5>
                                        <h4 class="m-b-0">5 <i class="md md-shopping-cart"></i></h4>
                                    </li>
                                    <li>
                                        <h5 class="text-muted m-t-20">Semaine passée</h5>
                                        <h4 class="m-b-0">{{ terminee }} <i class="md md-shopping-cart"></i></h4>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8">
                        <div class="card-box">
                            <h4 class="text-dark header-title m-t-0">Remarques importantes</h4>
                            <br>
                            <div class="alert alert-success">
                              <strong>Panel en développement !</strong> Si vous avez une question contacter Dekei sur Discord.
                            </div>
                            <div class="alert alert-danger">
                              <strong>Signalez les bugs !</strong> Signalez les bugs que vous rencontrez à Dekei via Discord.
                            </div>
                        </div>
                    </div>

                </div>
                {% endblock %}
                <!-- end row -->

                <!-- Footer -->
                <footer class="footer text-right">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-6">
                                © 2017. Tous droits réservés.
                            </div>
                            <div class="col-xs-6">
                                <ul class="pull-right list-inline m-b-0">
                                    <li>
                                        <a href="https://twitter.com/PiiDev" target="_blank">Twitter</a>
                                    </li>
                                    <li>
                                        <a href="https://github.com/PiiDev" target="_blank">Github</a>
                                    </li>
                                    <li>
                                        <a href="https://discord.gg/XBT3ZVu" target="_blank">Discord</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </footer>
                <!-- End Footer -->

            </div>
        </div>


        <!-- jQuery  -->
        <script src="{{ asset('Panel/assets/js/jquery.min.js') }}"></script>
        <script src="{{ asset('Panel/assets/js/jquery.migrate.min.js') }}"></script>
        <script src="{{ asset('Panel/assets/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('Panel/assets/js/detect.js') }}"></script>
        <script src="{{ asset('Panel/assets/js/fastclick.js') }}"></script>

        <script src="{{ asset('Panel/assets/js/jquery.slimscroll.js') }}"></script>
        <script src="{{ asset('Panel/assets/js/jquery.blockUI.js') }}"></script>
        <script src="{{ asset('Panel/assets/js/waves.js') }}"></script>
        <script src="{{ asset('Panel/assets/js/wow.min.js') }}"></script>
        <script src="{{ asset('Panel/assets/js/jquery.nicescroll.js') }}"></script>
        <script src="{{ asset('Panel/assets/js/jquery.scrollTo.min.js') }}"></script>

        <script src="{{ asset('Panel/assets/plugins/peity/jquery.peity.min.js') }}"></script>
        <script src="{{ asset('Panel/assets/plugins/morris/morris.min.js') }}"></script>

        <!-- jQuery  -->
        <script src="{{ asset('Panel/assets/plugins/waypoints/lib/jquery.waypoints.js') }}"></script>
        <script src="{{ asset('Panel/assets/plugins/counterup/jquery.counterup.min.js') }}"></script>

        <script src="{{ asset('Panel/assets/plugins/raphael/raphael-min.js') }}"></script>

        <script src="{{ asset('Panel/assets/plugins/jquery-knob/jquery.knob.js') }}"></script>

        <script src="{{ asset('Panel/assets/pages/jquery.dashboard.js') }}"></script>

        <script src="{{ asset('Panel/assets/js/jquery.core.js') }}"></script>
        <script src="{{ asset('Panel/assets/js/jquery.app.js') }}"></script>

        <script src="{{ asset('Panel/assets/plugins/bootstrap-sweetalert/sweet-alert.min.js') }}"></script>
        <script src="{{ asset('Panel/assets/pages/jquery.sweet-alert.init.js') }}"></script>

        <script type="text/javascript">
            jQuery(document).ready(function($) {
                $('.counter').counterUp({
                    delay: 100,
                    time: 1200
                });

                $(".knob").knob();

            });
            {% block js %}
            {% endblock %}
        </script>


    </body>
</html>
